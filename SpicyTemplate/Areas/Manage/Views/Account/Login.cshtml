@using SpicyTemplate.Areas.Manage.ViewModels

@model LoginVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/manage/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/manage/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/manage/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/manage/images/logo.svg" alt="logo">
                            </div>
                            <h4>Welcome back!</h4>
                            <h6 class="font-weight-light">Happy to see you again!</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                   
                                    <div class="input-group">
                                        
                                       
                                        <label asp-for="UsernameOrEmail">UserNameOrEmail</label>
                                        <input asp-for="UsernameOrEmail" placeholder="Username">
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="input-group">


                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password">
                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="input-group">


                                        <label asp-for="isRemembered">IsRemmebred</label>
                                        <input asp-for="isRemembered" placeholder="IsRemmebred
">
                                    </div>
                                </div>
                                <div class="my-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">LOGIN</button>
                                </div>
                               
                                <div class="text-center mt-4 font-weight-light">
                                    Don't have an account? <a href="register-2.html" class="text-primary">Create</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 login-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2020  All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/manage/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/manage/js/off-canvas.js"></script>
    <script src="~/manage/js/hoverable-collapse.js"></script>
    <script src="~/manage/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
