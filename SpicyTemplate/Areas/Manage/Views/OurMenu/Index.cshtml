@using SpicyTemplate.Models
@model List<OurMenu>
@{
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
           <a asp-controller="OurMenu" asp-action="Create">Create</a>
            <div class="table-responsive pt-3">

                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Count
                            </th>
                            <th>
                                  Name
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                              Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <img class="media-object" src="~/assets/img/menu/@item.Img" alt="img">
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                  <a>Update</a>
                                  <a>Delete</a>
                                </td>
                            </tr>
                        }
                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
